<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nima.mafia_game">

    <application
        android:allowBackup="true"
        android:icon="@drawable/round1"
        android:label="MaFia God"
        android:roundIcon="@drawable/round1"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mafia_Game">
        <activity android:name=".ShufflingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CitizensActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MafiasActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CaractersInformationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MafiaCitizenStatisticsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PlayerNameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>